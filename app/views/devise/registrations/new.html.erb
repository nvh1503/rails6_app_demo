<div class="user_login_form_content">
  <h2>Sign up</h2>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "text-center border border-light p-5") do |f| %>

    <div class="row">
      <div class="col-sm-4 text-right">
        <%= f.label :name %>
      </div>
      <div class="col-sm-6">
        <%= f.input :name, required: true, autofocus: true, label: false, input_html: { class: "form-control"} %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 text-right">
        <%= f.label :role %>
      </div>
      <div class="col-sm-6">
        <%= f.input :user_type, required: true, autofocus: true, label: false, input_html: { class: "form-control"} %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 text-right">
        <%= f.label :email %>
      </div>
      <div class="col-sm-6">
        <%= f.input :email, required: true, autofocus: true, label: false, input_html: { class: "form-control"} %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 text-right">
        <%= f.label :password %>
        <abbr title="required">*</abbr>
      </div>
      <div class="col-sm-6">
        <%= f.input :password,
                required: true,
                label: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 text-right">
        <%= f.label :password_confirmation %>
        <abbr title="required">*</abbr>
      </div>
      <div class="col-sm-6">
        <%= f.input :password_confirmation,
                required: true,
                label: false,
                input_html: { autocomplete: "new-password" } %>

      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>